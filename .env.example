# Environment variables for HuggingFace Spaces deployment
# Copy to .env and set your values

# Alberto API endpoint (when running bridge server separately)
ALBERTO_API_URL=http://localhost:8080

# API key for authentication (if required)
ALBERTO_API_KEY=

# Request timeout in seconds
ALBERTO_TIMEOUT=60

# Web interface configuration
HOST=0.0.0.0
PORT=7860

# Cloudflare Access (optional - only if your Worker is protected)
# Service token pair:
PUP_CF_ACCESS_CLIENT_ID=
PUP_CF_ACCESS_CLIENT_SECRET=
# Or provide a raw JWT assertion:
PUP_CF_ACCESS_JWT=

# Debug mode (true in development, false in production)
DEBUG=false

# Log level (debug, info, warning, error)
LOG_LEVEL=info